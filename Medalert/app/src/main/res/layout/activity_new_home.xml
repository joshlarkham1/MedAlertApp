<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE8E7">

    <!-- Top Row with Emergency and User Buttons -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Emergency Icon -->
        <ImageView
            android:id="@+id/iv_emergency_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_emergency"
            android:contentDescription="Emergency Icon" />

        <!-- User Button -->
        <ImageButton
            android:id="@+id/btn_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_user"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:contentDescription="User Profile" />
    </RelativeLayout>

    <!-- Welcome Section -->
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@id/iv_emergency_icon"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_below="@id/tv_welcome"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true" />

    <!-- SOS Button -->
    <Button
        android:id="@+id/btn_sos"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="#FF0000"
        android:text="SOS"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@id/tv_user_name"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true" />

    <!-- Address Details -->
    <TextView
        android:id="@+id/tv_address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@id/btn_sos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="135dp"
        android:text="Your Current Address"
        android:textColor="#000"
        android:textSize="16sp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:gravity="center">

        <!-- Home Button -->
        <Button
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/ic_home"
            android:text="Home"
            android:textColor="#000"
            android:gravity="center"
            android:padding="8dp"
            android:contentDescription="Navigate to Home" />

        <!-- Book Button -->
        <Button
            android:id="@+id/nav_book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/ic_book"
            android:text="Help"
            android:textColor="#000"
            android:gravity="center"
            android:padding="8dp"
            android:contentDescription="Book Services" />

        <!-- Phone Button -->
        <Button
            android:id="@+id/nav_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/ic_phone"
            android:text="Phone"
            android:textColor="#000"
            android:gravity="center"
            android:padding="8dp"
            android:contentDescription="Call Support" />

        <Button
            android:id="@+id/nav_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/ic_map"
            android:text="Map"
            android:textColor="#000"
            android:gravity="center"
            android:padding="8dp"
            android:contentDescription="Open Map Screen" />


    </LinearLayout>
</RelativeLayout>
